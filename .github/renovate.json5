{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
  ],
  terraform: {
    managerFilePatterns: [
      '/\\.tf$/',
    ],
  },
  customManagers: [
    {
      customType: 'regex',
      managerFilePatterns: [
        '*.tf',
      ],
      matchStrings: [
        'image = "${local.registry_uri}/pocket-id/pocket-id:v(?<currentValue>.*?)"\\n',
      ],
      depNameTemplate: 'pocket-id',
      datasourceTemplate: 'docker',
    },
  ],
}
